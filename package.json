{
  "name": "code-butler",
  "version": "1.0.0",
  "description": "Evolve code base at scale, one custom transform script at a time ðŸ˜‰",
  "main": "dist/index.js",
  "scripts": {
    "start": "ts-node -r tsconfig-paths/register ./src/cli.ts",
    "lint": "tslint src/**/*ts",
    "test": "jest",
    "test:debug": "node --inspect-brk ./node_modules/jest/bin/jest.js",
    "ci": "npm run lint && npm run format:test && npm test",
    "format:write": "prettier src/**/*.ts --write",
    "format:test": "prettier src/**/*.ts --list-different"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "dependencies": {
    "diff2html": "^2.7.0",
    "execa": "^1.0.0",
    "figlet": "^1.2.1",
    "fs-extra": "^7.0.1",
    "listr": "^0.14.3",
    "listr-input": "^0.1.3",
    "open": "0.0.5",
    "rxjs": "^6.4.0",
    "signale": "^1.3.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.5.0",
    "@commitlint/config-conventional": "^7.5.0",
    "@types/fs-extra": "^5.0.4",
    "@types/jest": "^23.3.13",
    "@types/listr": "^0.13.0",
    "@types/signale": "^1.2.0",
    "cross-env": "^5.2.0",
    "husky": "^1.3.1",
    "jest": "^24.0.0",
    "prettier": "^1.16.3",
    "ts-jest": "^23.10.5",
    "ts-node": "^8.0.2",
    "tsconfig-paths": "^3.7.0",
    "tslint-config-prettier": "^1.17.0",
    "typescript": "^3.2.4"
  },
  "author": "Tomas Trajan <@tomastrajan>",
  "license": "MIT",
  "homepage": "https://github.com/tomastrajan/code-butler#readme",
  "bugs": {
    "url": "https://github.com/tomastrajan/code-butler/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tomastrajan/code-butler.git"
  }
}
